 * Created by BraxtonN on 5/5/2017.
 */
class Throwable {
    var[] message;
    var[] stackTrace;

    Throwable(var[] message) {
        self->message = message;
    }

    Throwable(string message) {
        self->message = message.value();
    }

    fn getStackTrace() : string {
        if(stackTrace == null) {
            stackTrace = "";
        }

        return new string(stackTrace);
    }
}
